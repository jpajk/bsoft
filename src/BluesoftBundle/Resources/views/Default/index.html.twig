{% extends 'BluesoftBundle::template.html.twig' %}
{% block body %}
    <div class="row">
        <div class="form-wrapper">
            {{ form_start(form) }}
            <div class="uploader">
                {{ form_widget(form.spreadsheet, { 'attr': {'class': 'form-control  '} }) }}
                {{ form_widget(form.save, { 'attr': {'class': 'btn btn-primary'} }) }}
            </div>
            {{ form_end(form) }}
        </div>

        <div class="table-wrapper">
            <table id="contracts-table" class="display table table-striped table-bordered" cellspacing="0" width="100%">
                <thead class="">
                <tr>
                    <th>system</th>
                    <th>request</th>
                    <th>order_number</th>
                    <th>from_date</th>
                    <th>to_date</th>
                    <th>amount</th>
                    <th>amount_type</th>
                    <th>amount_period</th>
                    <th>authorization_percent</th>
                    <th>active</th>
                </tr>
                </thead>
            </table>
        </div>
    </div>

{% endblock %}